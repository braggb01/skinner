<ul id="tasks">
	<li <% if task.complete? %>class="completed"<% else %><% end %>>
		<%= form_for task, :remote => true do |f| %>
			<%= f.check_box :complete %><span><%= link_to task.description.titleize, task, :class => 'todo_link' %></span><% unless task.complete? %><span class="label label-info"><%= task.due_date %></span><% end %>
		<% end %>
	</li>
</ul>

