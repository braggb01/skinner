<span id="tasklist_<%= task.id %>">
	<li <% if task.complete? %>class="completed"<% else %><% end %>>
		<%= form_for task, :remote => true do |f| %>
			<div class="task_it">
				<%= f.check_box :complete %>    <%= link_to task.description.titleize, task, :class => 'todo_link' %>    <span class="label label-info"><%= task.due_date %></span>
			</div>
		<% end %>
	</li>
</span>

